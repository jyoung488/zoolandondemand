<div class="splash-container">

  <div class="splash">
    <h1 class="splash-head">Zoolander</h1>
    <p class="splash-subhead">
      What is this, a texting center for ants?
    </p>
  </div>
</div>

  <div class="content-wrapper">
    <div class="pure-g">
      <div class="pure-u-1-1 is-center">
        <%= image_tag("#{@image.image_original_url}", alt: "Random Zoolander GIF") %>
      </div>
    </div>

    <div class="ribbon l-box-lrg pure-g">
      <div class="pure-u-1-3"></div>
      <div class="pure-u-1-3">
        <%= form_tag('/quotes/send_text', method: :get, class: 'pure-form') do %>
        <%= telephone_field_tag 'phone_number', nil, placeholder: '555-111-5555', pattern: '^\d{3}-\d{3}-\d{4}$', class: 'pure-input-rounded' %>
        <%= submit_tag 'Text me a quote', class: 'pure-button'%>
        <% end %>
      </div>
      <div class="pure-u-1-3"></div>
    </div>
  </div>
